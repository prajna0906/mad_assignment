<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#FF616F"
                android:centerColor="#FF5177"
                android:endColor="#FF4081"
                android:angle="45"/>
            <corners
                android:radius="20dp"/>
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#FF4081"
                android:centerColor="#FF5177"
                android:endColor="#FF616F"
                android:angle="45"/>
            <corners
                android:radius="90dp"/>
        </shape>
    </item>
</selector>





